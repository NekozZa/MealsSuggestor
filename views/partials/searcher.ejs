<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
<style>
    * {
        font-family: "Poppins", sans-serif;
        font-weight: 100;
    }

    .card {
        cursor: pointer;
        transition: transform 0.3s ease-in-out;
    }

    .card:hover {
        transform: translateY(-20px);
    }

</style>

<div class="container" style="height: 100vh;">
    <div class="row h-auto mb-5">
        <div class="col-12">
            <form class="form-inline w-50 m-auto mt-3">
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">@</span>
                    <input type="text" class="form-control" name="ingredients" placeholder="rice, egg">
                    <button class="btn btn-outline-success">Find</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row h-75">
        <div class="col-12">
            <div class="container-fluid p-0">
                <div class="row meals-row">
                    
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    const btn = document.querySelector('button')
    const input = document.querySelector('input')
    
    btn.onclick = (e) => {
        e.preventDefault()

        const params = new URLSearchParams({apiKey: `<%= apiKey %>`, ingredients: input.value, number: 8})

        fetch(`https://api.spoonacular.com/recipes/findByIngredients?${params}`, {
            method: "GET",
        })
        .then(response => response.json())
        .then(data => {
            const row = document.querySelector('.meals-row')
            row.innerHTML = ''

            data.forEach((meal) => {
                const card = createCard(meal.title, meal.image)
                row.appendChild(card)
            })
        }) 
        .catch((error) => {
            console.log(error)
        })
    } 

    function createCard(title, imgSrc) {
        const holder = document.createElement('div')
        const card = document.createElement('div')
        const thumb = document.createElement('img')
        const body = document.createElement('div')
        holder.classList = 'w-auto col-md-3 mb-5'
        card.classList = 'card shadow'
        thumb.classList = 'card-img-top'
        thumb.src = imgSrc
        body.classList = 'card-body'
        body.innerHTML = `<h5 class="text-center text-weight-normal">${title}</h5>`

        holder.appendChild(card)
        card.appendChild(thumb)
        card.appendChild(body)
        card.style.width = '18rem'
        card.style.height = '20rem'
        return holder
    }
</script>